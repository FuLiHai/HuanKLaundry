<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.guan.o2o.fragment.SpringCloFragment">

    <GridView
        android:id="@+id/gv_spr_clo"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:horizontalSpacing="@dimen/DIMEN_20PX"
        android:listSelector="@android:color/transparent"
        android:numColumns="2"
        android:paddingEnd="@dimen/DIMEN_24PX"
        android:paddingStart="@dimen/DIMEN_24PX"
        android:paddingTop="@dimen/DIMEN_32PX"
        android:verticalSpacing="@dimen/DIMEN_20PX" />

    <include
        android:id="@+id/rlyt_loading"
        layout="@layout/view_loading_dialog"
        android:visibility="invisible" />

</RelativeLayout>
