<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.guan.o2o.fragment.HomeFragment">


    <include
        android:id="@+id/layout_title"
        layout="@layout/layout_home_title"></include>

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/DIMEN_260PX">

        <android.support.v4.view.ViewPager
            android:id="@+id/viewpager"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/llyt_dots"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/DIMEN_216PX"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/DIMEN_24PX"
                android:orientation="horizontal"></LinearLayout>
        </RelativeLayout>
    </FrameLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/DIMEN_8PX"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_a_wash"
            android:layout_width="@dimen/DIMEN_0PX"
            android:layout_height="@dimen/DIMEN_182PX"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="@dimen/DIMEN_20PX"
            android:layout_weight="1"
            android:src="@mipmap/ic_a_wash" />

        <ImageView
            android:id="@+id/iv_bag_wash"
            android:layout_width="@dimen/DIMEN_0PX"
            android:layout_height="@dimen/DIMEN_182PX"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="@dimen/DIMEN_20PX"
            android:layout_marginRight="@dimen/DIMEN_20PX"
            android:layout_weight="1"
            android:src="@mipmap/ic_bag_wash" />

    </LinearLayout>

    <ImageView
        android:id="@+id/iv_home_ariticles"
        style="@style/imageview_home"
        android:src="@mipmap/ic_home_articles" />

    <ImageView
        android:id="@+id/iv_other_wash"
        style="@style/imageview_home"
        android:src="@mipmap/ic_other_wash" />

    <ImageView
        android:id="@+id/iv_service_note"
        style="@style/imageview_home"
        android:src="@mipmap/ic_service_note" />

</LinearLayout>
