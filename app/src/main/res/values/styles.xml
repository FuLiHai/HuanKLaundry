<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <!-- BaseButton -->
    <style name="BaseButtonTheme">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">@dimen/DIMEN_88PX</item>
        <item name="android:layout_marginLeft">@dimen/DIMEN_32PX</item>
        <item name="android:layout_marginRight">@dimen/DIMEN_32PX</item>
    </style>

    <!-- CumtonButton -->
    <style name="ButtonTheme" parent="BaseButtonTheme">
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_marginBottom">@dimen/DIMEN_32PX</item>
        <item name="android:background">@drawable/bg_btn_selector</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/TEXT_SIZE_14SP</item>
    </style>

    <!-- Tab Bottom -->
    <style name="main_tab_bottom">
        <item name="android:textSize">@dimen/DIMEN_22PX</item>
        <item name="android:textColor">@color/icon_text_grey</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:paddingTop">@dimen/DIMEN_12PX</item>
        <item name="android:paddingBottom">@dimen/DIMEN_2PX</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:button">@null</item>
        <item name="android:singleLine">true</item>
        <item name="android:drawablePadding">@dimen/DIMEN_8PX</item>
        <item name="android:layout_weight">1</item>
    </style>

    <!--  More CustomView -->
    <style name="CustomView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/white</item>
    </style>

    <!--  ShortLineHorizontal -->
    <style name="TextView">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">@dimen/DIMEN_0.5PX</item>
        <item name="android:background">@color/frame_line_grey</item>
    </style>

    <!--  LongLineHorizontal_PayPass -->
    <style name="LineHorizontalPass">
        <item name="android:layout_width">@dimen/DIMEN_554PX</item>
        <item name="android:layout_height">@dimen/DIMEN_2PX</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:background">@color/frame_line_grey</item>
    </style>

    <!--  ShortLineVertical -->
    <style name="TextViewVertical">
        <item name="android:layout_width">@dimen/DIMEN_2PX</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:background">@color/frame_line_grey</item>
    </style>

    <!--  ShortLineVertical_PayPass -->
    <style name="TextViewVerticalPayPass" parent="TextViewVertical">
        <item name="android:layout_height">@dimen/DIMEN_60PX</item>
        <item name="android:gravity">center</item>
    </style>

    <!--  TextViewPayPass -->
    <style name="TextViewPayPass" >
        <item name="android:layout_width">@dimen/DIMEN_90PX</item>
        <item name="android:layout_height">@dimen/DIMEN_80PX</item>
        <item name="android:gravity">center</item>
    </style>

    <!--  ImageViewHome -->
    <style name="imageview_home">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">@dimen/DIMEN_136PX</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_marginLeft">@dimen/DIMEN_20PX</item>
        <item name="android:layout_marginRight">@dimen/DIMEN_20PX</item>
        <item name="android:layout_marginTop">@dimen/DIMEN_12PX</item>
    </style>

    <!--  AWash TAB -->
    <style name="awash_tab">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/TEXT_SIZE_18SP</item>
        <item name="android:textColor">@color/texts_grey</item>
    </style>

    <!-- 自定义loading dialog -->
    <style name="Loading_dialog" parent="android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@mipmap/bg_loading</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

</resources>
